# Discord Bot Token (Required)
# Get from Discord Developer Portal: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# OpenAI API Key (Required)
# Get from OpenAI: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Tavily API Key (Optional - for enhanced web search)
# Get from Tavily: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key_here

# Brave API Key (Optional - for enhanced web search)
# Get from Brave: https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# Environment Settings
NODE_ENV=production

# Security Settings
# Maximum requests per minute per user
RATE_LIMIT=5
RATE_LIMIT_WINDOW=60000

# Memory Limits (in MB)
MAX_MEMORY_USAGE=512

# Channel Whitelist (comma-separated channel IDs)
# Leave empty to allow all channels
WHITELISTED_CHANNELS=

# Admin Users (comma-separated user IDs)
# These users can use admin commands
ADMIN_USERS=

# Error Logging
# Set to 'true' to enable detailed error logging
DEBUG_MODE=false

# API Rate Limits
SCRYFALL_RATE_LIMIT=100
OPENAI_RATE_LIMIT=60

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600000

# DO NOT COMMIT THIS FILE
# Copy this file to .env and fill in your values
# Keep your .env file secure and never share or commit it
